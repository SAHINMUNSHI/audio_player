<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#EFEFEF"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    
    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/icon_player"
        android:layout_marginStart="5dp"
        android:src="@drawable/audio_player"
        android:layout_centerVertical="true"
        android:contentDescription="@string/audio_icon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_audio_title"
        android:text="@string/audio_title_text"
        android:layout_toEndOf="@+id/icon_player"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:ellipsize="end"/>


</RelativeLayout>